<div class="row" style="margin-top: 10px;">
  <p class="pull-right"><%= link_to 'New', new_team_path, "class" => "btn btn-success" %></p>
</div>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Slug</th>
    <th>WordPress Team Page Snippet</th>
    <th></th>
  </tr>
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= team.slug %></td>
      <td><%= %{<div id="js-team-id" data-team_id=#{team.id}></div>} %></td>
      <td>
        <div class="pull-right">
          <%= link_to 'Players', team_players_path(team), "class" => "btn btn-success" %>
          <%= link_to 'Edit', edit_team_path(team), "class" => "btn btn-primary" %>
          <%= link_to 'Delete', team_path(team), method: :delete, "class" => "btn btn-danger" %>
        </div>
      </td>
    </tr>
  <% end %>
  <tr></tr>
</table>
